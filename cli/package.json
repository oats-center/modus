{
  "name": "@modusjs/cli",
  "packageManager": "yarn@3.2.1",
  "version": "0.0.6",
  "description": "Conversion utility to generate a JSON schema from the Modus XSD files.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "modus": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b -w",
    "test": "DEBUG=\"@modusjs*,${DEBUG}\" nodemon --enable-source-maps --config nodemon.config.json dist/test/index.js",
    "tojson": "yarn run cli tojson",
    "cli": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "author": "Aaron Ault <aultac@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/debug": "^4",
    "@types/node": "^18.0.0",
    "execa": "^6.1.0",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@modusjs/convert": "workspace:^",
    "@oada/types": "^3.1.5",
    "chalk": "^4.0.0",
    "commander": "^9.3.0",
    "debug": "^4.3.4",
    "tslib": "^2.4.0",
    "yesno": "^0.4.0"
  }
}
